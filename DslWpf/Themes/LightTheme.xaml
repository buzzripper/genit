<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- VS 2026 Light Theme Colors -->
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="Theme.Background" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="Theme.Background.Window" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Theme.Background.Control" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="Theme.Background.ControlLight" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="Theme.Background.ToolBar" Color="#EAEAEA"/>
    <SolidColorBrush x:Key="Theme.Background.Header" Color="#E8E8E8"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="Theme.Border" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="Theme.Border.Dark" Color="#999999"/>
    <SolidColorBrush x:Key="Theme.Border.Light" Color="#E0E0E0"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="Theme.Foreground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="Theme.Foreground.Secondary" Color="#717171"/>
    <SolidColorBrush x:Key="Theme.Foreground.Disabled" Color="#A0A0A0"/>
    
    <!-- Accent Colors -->
    <SolidColorBrush x:Key="Theme.Accent" Color="#0078D4"/>
    <SolidColorBrush x:Key="Theme.Accent.Hover" Color="#106EBE"/>
    <SolidColorBrush x:Key="Theme.HotTrack" Color="#0066CC"/>
    
    <!-- DataGrid Colors -->
    <SolidColorBrush x:Key="Theme.DataGrid.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Theme.DataGrid.RowBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Theme.DataGrid.AlternatingRowBackground" Color="#F7F7F7"/>
    <SolidColorBrush x:Key="Theme.DataGrid.SelectedBackground" Color="#CCE8FF"/>
    <SolidColorBrush x:Key="Theme.DataGrid.HeaderBackground" Color="#E8E8E8"/>
    
    <!-- Splitter Colors -->
    <SolidColorBrush x:Key="Theme.Splitter" Color="#CCCCCC"/>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="Theme.Delete" Color="#E51400"/>
    
</ResourceDictionary>
