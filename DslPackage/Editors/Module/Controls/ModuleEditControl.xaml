<editors:UserControlBase x:Class="Dyvenix.GenIt.DslPackage.Editors.Module.Controls.ModuleEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dyvenix.GenIt.DslPackage.Editors.Module.Controls"
             xmlns:editors="clr-namespace:Dyvenix.GenIt.DslPackage.Editors"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBackgroundKey}}">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBackgroundKey}}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBorderKey}}"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBackgroundKey}}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBorderKey}}"/>
        </Style>
        <!-- Toolbar button style - subtle hover effect -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="Transparent" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.HighlightColorKey}}" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Small button style for browse button -->
        <Style x:Key="SmallButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBackgroundKey}}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBorderKey}}"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="MinWidth" Value="24"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="300" MinWidth="200"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Text Fields -->
        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Module Header -->
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Module" 
                       FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>

            <!-- Name -->
            <Label Grid.Row="1" Grid.Column="0" Content="Name:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtName" VerticalAlignment="Center" Margin="0,0,0,8"
                     TextChanged="txtName_TextChanged"/>

            <!-- Namespace -->
            <Label Grid.Row="2" Grid.Column="0" Content="Namespace:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtNamespace" VerticalAlignment="Center" Margin="0,0,0,8"
                     TextChanged="txtNamespace_TextChanged"/>

            <!-- Root Folder -->
            <Label Grid.Row="3" Grid.Column="0" Content="Root Folder:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <Grid Grid.Row="3" Grid.Column="1" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" x:Name="txtRootFolder" VerticalAlignment="Center"
                         TextChanged="txtRootFolder_TextChanged"/>
                <Button Grid.Column="1" x:Name="btnBrowseFolder" Content="..." 
                        Style="{StaticResource SmallButtonStyle}" Margin="4,0,0,0"
                        Click="btnBrowseFolder_Click" ToolTip="Browse for folder"/>
            </Grid>
        </Grid>

        <!-- GridSplitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"
                      Background="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBorderKey}}"
                      Margin="8,0"/>

        <!-- Right Panel - Permissions -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header with label and buttons -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="Permissions" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <Button x:Name="btnAddPermission" ToolTip="Add Permission" Click="btnAddPermission_Click" 
                        Style="{StaticResource ToolbarButtonStyle}" Margin="12,0,0,0">
                    <TextBlock Text="+" FontSize="16" FontWeight="Bold"/>
                </Button>
                <Button x:Name="btnDeletePermission" ToolTip="Delete Permission" Click="btnDeletePermission_Click" 
                        Style="{StaticResource ToolbarButtonStyle}" Margin="2,0,0,0">
                    <Path Data="M2,4 L5,4 L5,2 C5,1.45 5.45,1 6,1 L11,1 C11.55,1 12,1.45 12,2 L12,4 L15,4 L15,5 L14,5 L14,15 C14,15.55 13.55,16 13,16 L4,16 C3.45,16 3,15.55 3,15 L3,5 L2,5 L2,4 Z M6,4 L11,4 L11,2.5 L6,2.5 L6,4 Z M4,5 L4,15 L13,15 L13,5 L4,5 Z M5.5,7 L6.5,7 L6.5,13 L5.5,13 L5.5,7 Z M8,7 L9,7 L9,13 L8,13 L8,7 Z M10.5,7 L11.5,7 L11.5,13 L10.5,13 L10.5,7 Z" 
                          Fill="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}" 
                          Width="15" Height="15" Stretch="Uniform"/>
                </Button>
            </StackPanel>
            
            <!-- Permissions ListBox -->
            <ListBox Grid.Row="1" x:Name="lstPermissions" MinHeight="150"/>
        </Grid>
    </Grid>
</editors:UserControlBase>
